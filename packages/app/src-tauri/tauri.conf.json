{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Fourviere Podcast",
    "version": "0.1.1"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/newfla/fourviere-podcast/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI0MDUxRDJDMDUyQkYzNjQKUldSazh5c0ZMQjBGdEpxdTZhK05LMnFpWks4Nks5eDg1bzZSV3BLMWI4TG5DYnBIYnUrZld0VEUK"
    },
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "scope": ["$APPDATA/**", "$APPDATA/*", "$APPDATA/", "$APPDATA"],
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { "name": "binaries/ffmpeg", "sidecar": true, "args": true },
          { "name": "binaries/ffprobe", "sidecar": true, "args": true }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "audio.fourviere.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": ["binaries/ffmpeg", "binaries/ffprobe"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Fourviere Podcast Feed Studio",
        "width": 1240,
        "height": 800
      }
    ]
  }
}
